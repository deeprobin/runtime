<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <FeatureGenericMath>false</FeatureGenericMath>
    <NoWarn>$(NoWarn),1718,SYSLIB0013</NoWarn>
    <TestRuntime>true</TestRuntime>
    <IncludeRemoteExecutor>true</IncludeRemoteExecutor>
    <TargetFrameworks>$(NetCoreAppCurrent)-windows;$(NetCoreAppCurrent)-Unix;$(NetCoreAppCurrent)-Browser</TargetFrameworks>
    <Nullable>disable</Nullable>
    <!-- Disable nullability public only feature for NullabilityInfoContextTests -->
    <Features>$(Features.Replace('nullablePublicOnly', '')</Features>
  </PropertyGroup>
  <PropertyGroup>
    <DefineConstants Condition="'$(FeatureGenericMath)' == 'true'">$(DefineConstants);FEATURE_GENERIC_MATH</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Vectors\Vector128Tests.cs" />
    <Compile Include="Vectors\Vector256Tests.cs" />
    <Compile Include="Vectors\Vector64Tests.cs" />
    <Compile Include="X86\Bmi1Tests.ResetLowestSetBit.cs" />
    <Compile Include="X86\Bmi1Tests.AndNot.cs" />
    <Compile Include="X86\Bmi1Tests.BitFieldExtract.cs" />
    <Compile Include="X86\Bmi1Tests.cs" />
    <Compile Include="X86\Bmi1Tests.ExtractLowestSetBit.cs" />
    <Compile Include="X86\Bmi1Tests.GetMaskUpToLowestSetBit.cs" />
    <Compile Include="X86\Bmi1Tests.TrailingZeroCount.cs" />
    <Compile Include="X86\Bmi2Tests.cs" />
    <Compile Include="X86\Bmi2Tests.ParallelBitDeposit.cs" />
    <Compile Include="X86\Bmi2Tests.ParallelBitExtract.cs" />
    <Compile Include="X86\Bmi2Tests.MultiplyNoFlags.cs" />
    <Compile Include="X86\Bmi2Tests.ZeroHighBits.cs" />
    <Compile Include="X86\LzcntTests.cs" />
    <Compile Include="X86\LzcntTests.LeadingZeroCount.cs" />
    <Compile Include="X86\PopcntTests.cs" />
    <Compile Include="X86\PopcntTests.PopCount.cs" />
    <Compile Include="X86\Sse42Tests.CompareGreaterThan.cs" />
    <Compile Include="X86\Sse42Tests.Crc32.cs" />
    <Compile Include="X86\Sse42Tests.cs" />
    <Compile Include="X86\SseTests.ConvertScalarToVector128Single.cs" />
    <Compile Include="X86\SseTests.ConvertToNInt.cs" />
    <Compile Include="X86\SseTests.ConvertToNIntWithTruncation.cs" />
    <Compile Include="X86\SseTests.cs" />
    <Compile Include="X86\Ssse3Tests.AlignRight.cs" />
    <Compile Include="X86\Ssse3Tests.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(CommonTestPath)TestUtilities.Unicode\TestUtilities.Unicode.csproj" />
  </ItemGroup>
</Project>
